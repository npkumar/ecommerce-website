<% layout("layout") -%>

<div class="container">
    <div class="row">
        <% products.forEach(function(product){ %>
           <div class="col-md-4">
               <a href="/product/<%= product._id %>">
                   <div class="thumbnail">
                       <img src="<%= product.image %>">
                       <div class="caption">
                           <h3><%= product.name %></h3>
                           <p><%= product.category.name %></p>
                           <p><%= product.price %></p>
                       </div>
                   </div>
               </a>
           </div> 
        <% }); %>
    </div>
</div>